<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<moduleSets>
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<excludes>
				<exclude>*:pac-conference-ear</exclude>
			</excludes>
			<binaries>
				<attachmentClassifier>javadoc</attachmentClassifier>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>javadocs</outputDirectory>
				<unpack>false</unpack>
			</binaries>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<outputDirectory>/surefire-reports</outputDirectory>
						<directory>target/surefire-reports</directory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<excludes>
				<exclude>*:pac-conference-ear</exclude>
			</excludes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>/modules</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<excludes>
				<exclude>*:pac-conference-dist</exclude>
				<exclude>*:pac-conference-ear</exclude>
				<exclude>*:pac-conference-testcommon</exclude>
			</excludes>
			<binaries>
				<attachmentClassifier>sources</attachmentClassifier>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>/sources</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>*:pac-conference-ear</include>
			</includes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>/deploy</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>